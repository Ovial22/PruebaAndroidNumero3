<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductActivity">

    <Button
        android:id="@+id/botonAgregarCarrito"
        android:layout_width="312dp"
        android:layout_height="64dp"
        android:text="Agregar al carrito"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.878" />

    <TextView
        android:id="@+id/madeloTview"
        android:layout_width="218dp"
        android:layout_height="55dp"
        android:layout_marginBottom="49dp"
        android:background="#F1F1F1"
        android:backgroundTint="#005D9FD3"
        android:text="Modelo"
        android:textAlignment="center"
        android:textColor="#343F7C"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.464" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="249dp"
        android:layout_height="269dp"
        android:src="@drawable/istockphoto_1206806317_612x612"
        app:layout_constraintBottom_toTopOf="@+id/botonAgregarCarrito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004" />

    <TextView
        android:id="@+id/PreciotextView"
        android:layout_width="218dp"
        android:layout_height="47dp"
        android:text="Precio"
        android:textAlignment="center"
        android:textColor="#343F7C"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/botonAgregarCarrito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.633" />

    <TextView
        android:id="@+id/CodigoTextView"
        android:layout_width="218dp"
        android:layout_height="45dp"
        android:text="Codigo"
        android:textAlignment="center"
        android:textColor="#343F7C"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/botonAgregarCarrito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PreciotextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/DescripcionTextView"
        android:layout_width="356dp"
        android:layout_height="153dp"
        android:text="Descripcion"
        android:textAlignment="center"
        android:textColor="#343F7C"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/botonAgregarCarrito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CodigoTextView"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>